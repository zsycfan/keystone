{% extends "layouts/base.twig" %}

{% block content %}
<form action="{{ url_to('keystone/content/edit/' ~ page._id) }}" method="post">
  <p>title: <input type="text" placeholder="Title..." name="node[title]" value="{{ page.title }}" /></p>
  <p>path: <input type="text" placeholder="Path..." name="node[path]" value="{{ page.path }}" /></p>
  <hr />

  {% include "@layout." ~ layout.getName() ~ "/" ~ layout.getScreen('content').getPath() %}

  <p><input type="submit" class="btn" /></p>
</form>
{% endblock %}