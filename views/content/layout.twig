{% extends "content/_layout.twig" %}

{% set redirect = 'content_edit_layout' %}

{% block formbody %}
  <div class="page-header">
    <h1>Page Layout</h1>
  </div>
  <ul class="cards">
    {% for layout in layouts %}
    <li>
      <input type="radio" id="layout-{{layout}}" name="page[layout]" value="{{layout}}" {{ page.layout.name == layout ? 'checked="true"' : '' }} />
      <label for="layout-{{layout}}" class="card">
        <div class="img"><img src="http://placehold.it/150x200" /></div>
        {{ ucfirst(layout) }}
      </label>
    </li>
    {% endfor %}
  </ul>
{% endblock %}