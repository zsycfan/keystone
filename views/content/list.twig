{% extends "content/_layout_list.twig" %}

{% block content %}
  <div class="page-header">
    <h1>Content</h1>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Title <a href="#"><i class="icon-sort"></i></a></th>
        <th width="10%">Status</th>
        <th width="10%">Date</th>
      </tr>
    </thead>
    <tbody>
      {% for page in pages %}
      <tr>
        <td>
          <a class="entry" href="{{ url_to_route('content_edit_content', page.id) }}">
            <span class="singleline">
              <strong>{{ page.title }}</strong> <span class="excerpt">{{ page.excerpt }}</span>
            </span>
          </a>
        </td>
        <td>
          {{ page.published ? '<span class="label label-success">Live</span>' : '<span class="label label-warning">Draft</span>' }}
        </td>
        <td>
          <span class="singleline meta">{{ page.updated_since|date }}</span></td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}