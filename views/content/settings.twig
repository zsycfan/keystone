{% extends "content/_layout.twig" %}

{% set action = 'content_save_settings' %}

{% block formbody %}
  <div class="page-header">
    <h1>Settings</h1>
  </div>
  <p>
    <label>URI</label>
    <input name="uri" type="text" placeholder="/path/to/resource" value="{{ page.uri }}" />
  </p>
  <p>
    <label>Publish Date</label>
    <input name="published_at" type="text" placeholder="Today?" value="{{ page.published_at }}" />
  </p>
{% endblock %}