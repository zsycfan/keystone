{% extends "content/_layout_list.twig" %}

{% block crumb_actions %}
  <div class="crumb-actions pull-right">
    <a class="btn" href="#">Edit</a>
    <a class="btn btn-success" href="{{ url_to_route('content_new') }}"><i class="icon-plus"></i> Add Content</a>
  </div>
{% endblock %}

{% block content %}
  <div class="page-header">
    <h1>Content</h1>
  </div>
  {% for page in pages %}
  <div class="page-box">
    <a class="move" href="#"><i class="icon-move"></i> <span>Move</span></a>
    <a href="{{ url_to_route('content_edit_content', page.id) }}">
      <p><strong><span class="singleline">{{ page.title }}</span></strong></p>
      <p class="excerpt">{{ page.excerpt }}</p>
      <p class="meta">Updated by <a href="#">Mark Huot</a> {{ page.created_since|date('%d days, %h hours') }} ago</p>
    </a>
  </div>
  {% endfor %}
{% endblock %}