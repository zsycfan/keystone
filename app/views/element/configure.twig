<form action="{{ URL_route('postConfigureElement', element.id) }}" method="post">
<ul>
	{% for field in element.type.fields %}
		<li>{{ field.name }}: <input type="text" name="field[{{ field.id }}]" value="{{ element.revision().getFieldId(field.id).value }}" /></li>
	{% endfor %}
</ul>
<input type="submit" value="Save configuration" /> or <a href="{{ URL_route('editContent', element.relatedContent.id) }}">cancel</a>
</form>